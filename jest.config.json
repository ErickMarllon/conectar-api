{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.e2e\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s", "!**/*.spec.(t|j)s"],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "<rootDir>src/infrastructure/database/(factories|migrations|seeds)/",
    "<rootDir>/main.ts",
    "(.+).module.ts"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "setupFiles": ["<rootDir>/setup-jest.mjs"],
  "cacheDirectory": "../.jest-cache",
  "testTimeout": 120000
}
